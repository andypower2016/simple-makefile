CC  := gcc
CXX := g++
CXXFLAGS := -O2 -Wall -std=c++11 -DVar
CFLAGS := -O2 -Wall
INC := -I"D:\Me\Source\google test\googletest\googletest\include"
LIBPATH := -L"D:\Me\Source\google test\googletest\build\lib" -L"."
LIBS := -lgtest -lstdc++ 

.PHONY:main
main:
	#link the dynamic lib (libfunc) with main.o
	$(CXX) $(CXXFLAGS) $(INC) main.c -o main $(LIBPATH) $(LIBS) -lfunc 

shared:
	$(CXX) $(CXXFLAGS) -c tmp.c -o tmp.o 
	# link gtest objects (test.o) with other objects (tmp.o) and create a dynamic lib (libfunc)
	$(CC) -fPIC -shared -o libfunc.a tmp.o "C:\\Users\\User\\Desktop\\gtest\\test.o" $(LIBPATH) $(LIBS)

clean:
	rm *.exe *.so *.o *.a
